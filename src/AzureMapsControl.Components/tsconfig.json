{
  "compilerOptions": {
    "outDir": "dist",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "alwaysStrict": true,
    "target": "es5",
    "baseUrl": "./",
    "lib": [
      "dom",
      "es5",
      "es2015",
      "es2017.object"
    ],
    "declaration": true,
    "declarationDir": "./dist/typings",
    "typeRoots": [
      "./typings",
      "./node_modules/@types"
    ],
    "paths": {
      "azure-maps-control-scalebar": [
        "typings/ScalebarControl"
      ],
      "azure-maps-control-overviewmap": [
        "typings/OverviewMap"
      ],
      "azure-maps-control-animations": [
        "typings/Animations"
      ],
      "azure-maps-control-geolocation": [
        "typings/GeolocationControl"
      ],
      "azure-maps-html-marker-layer": [
        "typings/HtmlMarkerLayer"
      ]
    }
  },
  "include": [
    "typescript/**/*"
  ],
  "exclude": [
    "node_modules",
    "typings",
    "types"
  ]
}